<Window x:Class="TalesConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TalesConverter"
        mc:Ignorable="d"
        Title="Tales# Converter v1" Height="400" Width="300" ResizeMode="NoResize"
		>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="20" />
			<RowDefinition Height="20" />
			<RowDefinition Height="20" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Name="ImagePanel" Drop="ImagePanel_Drop" AllowDrop="true">
			<Button x:Name="btn1" Click="btn1_Click" Height="300" Panel.ZIndex="1">
				<Button.Background>
					<ImageBrush ImageSource="Resources/drag_drop.png" Stretch="Uniform"/>
				</Button.Background>
			</Button>
		</StackPanel >
		
		
		<CheckBox x:Name="cb1" IsEnabled="False" Grid.Row="1" Content="모르는 tsm 음악 파일 자동 분석 (느림)" Margin="8,0,0,0"/>
		<CheckBox x:Name="cb2" IsEnabled="False" Grid.Row="2" Content="분리된 이미지 자동으로 합치기 (불안정)" Margin="8,0,0,0"/>
		<Grid Grid.Row="3" Margin="8,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2.5*" />
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="0.5*" />
				<ColumnDefinition Width="2.5*" />
				<ColumnDefinition Width="1*" />
			</Grid.ColumnDefinitions>
			<TextBlock Text="tsi 분석 속도"/>
			<Slider x:Name="slide1" Grid.Column="1" Minimum="1" SmallChange="1" LargeChange="2" Value="{Binding MaxThread}" Maximum="16"/>
			<TextBlock Grid.Column="3" Text="그림 추출 속도"/>
			<Slider x:Name="slide2" Grid.Column="4" Minimum="1" SmallChange="1" LargeChange="2" Value="{Binding MaxImage}" Maximum="16"/>
		</Grid>
	</Grid>
</Window>
